{% extends 'base.html.twig' %}

{% set currentPage = 'settings' %}

{% block title %}{{ 'organizations.index.title' | trans }}{% endblock %}

{% block sidebar %}
    {{ include('settings/_sidebar.html.twig', { current: 'organizations' }, with_context = false) }}
{% endblock %}

{% block body %}
    <main class="layout__body flow organizations-index">
        <div class="layout__breadcrumb">
            <h1>{{ 'organizations.index.title' | trans }}</h1>
        </div>

        <div class="wrapper-large flow">
            <div class="grid">
                <a class="card card--action" href="{{ path('new organization') }}">
                    <span>
                        {{ icon('plus') }}
                        {{ 'organizations.index.new_organization' | trans }}
                    </span>
                </a>

                {% for organization in organizations %}
                    <div class="card flow" data-test="organization-item">
                        <a class="card__title" href="{{ path('edit organization', { uid: organization.uid }) }}">
                            {{ organization.name }}
                        </a>

                        <div class="card__body">
                            {{ include(
                                'organizations/_organizations_as_list.html.twig',
                                {
                                    organizations: organization.subOrganizations,
                                    mode: 'edit',
                                },
                                with_context = false
                            ) }}
                        </div>

                        <div class="text--center text--small">
                            <a href="{{ path('new organization', { parent: organization.uid }) }}">
                                {{ icon('plus') }}
                                {{ 'organizations.index.new_sub_organization' | trans | raw }}
                            </a>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </main>
{% endblock %}
