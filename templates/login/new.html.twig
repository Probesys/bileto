{% extends 'base.html.twig' %}

{% block title %}{{ 'Log in' | trans }}{% endblock %}

{% block body %}
    <main class="layout__body layout__body--small flow">
        <h1>{{ 'Log in' | trans }}</h1>

        <form action="{{ path('login') }}" method="post" class="flow">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            {% if error %}
                {{ include(
                    'alerts/_error.html.twig',
                    { message: error.messageKey | trans(error.messageData, 'security') },
                    with_context = false
                ) }}
            {% endif %}

            <div class="flow-small">
                <label for="username">
                    {{ 'Email address' | trans }}
                </label>

                <input
                    type="email"
                    id="username"
                    name="_username"
                    value="{{ last_username }}"
                    required
                    autocomplete="email"
                />
            </div>

            <div class="flow-small">
                <label for="password">
                    {{ 'Password' | trans }}
                </label>

                <div class="password-container" data-controller="password">
                    <input
                        type="password"
                        id="password"
                        name="_password"
                        required
                        autocomplete="current-password"
                        data-password-target="input"
                    />

                    <button
                        type="button"
                        role="switch"
                        data-action="password#toggle"
                        data-password-target="button"
                    >
                        {{ icon('eye') }}
                        {{ icon('eye-slash') }}
                        <span class="sr-only">
                            {{ 'Show password as plain text. Note: this will visually expose your password.' | trans }}
                        </span>
                    </button>
                </div>
            </div>

            <div class="form__actions">
                <button id="form-login-submit" class="button--primary" type="submit">
                    {{ 'Login' | trans }}
                </button>
            </div>
        </form>

        <p class="text--small text--center">
            <a href="{{ path('about') }}">
                {{ 'About Bileto' | trans }}
            </a>
        </p>
    </main>
{% endblock %}
