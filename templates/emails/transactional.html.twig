{% apply inline_css %}
    <!DOCTYPE html>
    <html>
        <head>
            <title>{% block title %}Bileto{% endblock %}</title>
            <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1">
            <style>
                body {
                    margin: 0;

                    color: #1c2024;
                    font-family: Lucida, Arial, sans-serif;
                    font-size: 18px;
                    line-height: 1.3;

                    background-color: #f9f9fb;
                }

                img {
                    max-width: 100%;
                    height: auto;
                }

                a {
                    color: #008573;
                }

                .text--center {
                    text-align: center;
                }

                .call-to-action {
                    display: inline-block;
                    padding: 10px 20px;
                    color: #fafefd;
                    text-decoration: none;
                    background-color: #0d3c48;
                    border-radius: 5px;
                }

                .email__header {
                    margin: 30px;
                    text-align: center;
                }

                @media screen and (max-width: 600px) {
                    .email__header {
                        margin: 15px;
                    }
                }

                .email__header img {
                    max-width: 200px;
                }

                .email__body {
                    max-width: 525px;
                    margin: 20px auto;
                    padding: 30px;
                    background-color: #fff;
                    border-radius: 5px;
                }

                @media screen and (max-width: 600px) {
                    .email__body {
                        max-width: auto;
                        margin: 10px;
                        padding: 15px;
                    }
                }

                .email__footer {
                    color: #60646c;
                    font-size: 14px;
                    text-align: center;
                }

                .email__footer a {
                    color: #60646c;
                }
            </style>
        </head>

        <body class="email">
            <div class="email__header">
                <img src="{{ email.image('@public/logo.svg') }}" alt="Bileto" width="200" height="40">
            </div>

            <div class="email__body">
                {% block body %}
                {% endblock %}
            </div>

            <div class="email__footer">
                {% block footer %}
                    <p>{{ 'emails.transactional.sent' | trans({ url: url('home') }) | raw }}</p>
                {% endblock %}
            </div>
        </body>
    </html>
{% endapply %}
