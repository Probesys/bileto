{% extends 'modal.html.twig' %}

{% block title %}{{ 'tickets.priority.edit.title' | trans }}{% endblock %}

{% block body %}
    {{ form_start(form, {
        action: path('edit ticket priority', { uid: ticket.uid }),
    }) }}
        {{ form_errors(form) }}

        <div class="cols flow">
            <div class="col--extend">
                {{ form_row(form.urgency) }}
            </div>

            <div class="col--extend">
                {{ form_row(form.impact) }}
            </div>
        </div>

        {{ form_row(form.priority) }}
    {{ form_end(form) }}
{% endblock %}
