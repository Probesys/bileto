{% for field in event.changes | keys %}
    <div class="event" data-test="event-item">
        <div class="event__message">
            {{ event | formatTicketChanges(field) | raw }}
        </div>

        <time class="event__date" datetime="{{ event.createdAt | dateIso }}">
            {{ event.createdAt | dateTrans('HH:mm') }}
        </time>
    </div>
{% endfor %}
