{% extends 'modal.html.twig' %}

{% block title %}{{ 'tickets.title.edit.title' | trans }}{% endblock %}

{% block body %}
    {{ form_start(form, {
        action: path('update ticket title', { uid: ticket.uid }),
        attr: {
            'class': 'form--standard',
            'data-turbo-preserve-scroll': true,
        },
    }) }}
        {{ form_errors(form) }}

        <div class="flow flow--small">
            <label for="{{ field_id(form.title) }}">
                {{ 'tickets.title' | trans }}

                <small class="text--secondary">
                    {{ 'forms.max_chars' | trans({ number: 255 }) }}
                </small>
            </label>

            {{ form_errors(form.title) }}

            <input
                type="text"
                id="{{ field_id(form.title) }}"
                name="{{ field_name(form.title) }}"
                value="{{ field_value(form.title) }}"
                required
                maxlength="255"
                {% if field_has_errors(form.title) %}
                    aria-invalid="true"
                    aria-errormessage="{{ field_id(form.title, 'error') }}"
                {% endif %}
            />
        </div>

        <div class="form__actions">
            <button class="button--primary" type="submit">
                {{ 'forms.save_changes' | trans }}
            </button>
        </div>
    {{ form_end(form) }}
{% endblock %}
