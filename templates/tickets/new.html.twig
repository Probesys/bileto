{% extends 'base.html.twig' %}

{% set currentPage = 'tickets' %}

{% block title %}{{ 'tickets.new.title' | trans }}{% endblock %}

{% block breadcrumb %}
    <nav class="layout__breadcrumb" aria-label="{{ 'layout.breadcrumb' | trans }}">
        <a href="{{ path('home') }}">
            {{ 'layout.home' | trans }}
        </a>

        <a href="{{ path('tickets') }}">
            {{ 'tickets.index.title' | trans }}
        </a>

        <span aria-current="page">
            {{ 'tickets.new.title' | trans }}
        </span>
    </nav>
{% endblock %}

{% block body %}
    <main class="layout__body">
        <h1>{{ 'tickets.new.title' | trans }}</h1>

        <div class="panel">
            <form
                action=""
                method="get"
                class="form--standard"
            >
                <div class="flow flow--small">
                    <label for="organization">
                        {{ 'tickets.new.choose_orga' | trans }}
                    </label>

                    <select id="organization" name="organization">
                        {% for organization in organizations %}
                            <option value="{{ organization.uid }}">
                                {{ organization.name }}
                            </option>
                        {% endfor %}
                    </select>
                </div>

                <div class="form__actions">
                    <button class="button--primary" type="submit">
                        {{ 'tickets.new.submit_orga_choice' | trans }}
                    </button>
                </div>
            </form>
        </div>
    </main>
{% endblock %}
