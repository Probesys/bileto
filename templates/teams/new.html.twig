{% extends 'admin.html.twig' %}

{% set currentMenu = 'teams' %}

{% block title %}{{ 'teams.new.title' | trans }}{% endblock %}

{% block breadcrumb %}
    <nav class="layout__breadcrumb" aria-label="{{ 'layout.breadcrumb' | trans }}">
        <a href="{{ path('home') }}">
            {{ 'layout.home' | trans }}
        </a>

        <a href="{{ path('admin') }}">
            {{ 'admin.index.title' | trans }}
        </a>

        <a href="{{ path('teams') }}">
            {{ 'teams.index.title' | trans }}
        </a>

        <span aria-current="page">
            {{ 'teams.new.title' | trans }}
        </span>
    </nav>
{% endblock %}

{% block body %}
    <main class="layout__body">
        <h1>{{ 'teams.new.title' | trans }}</h1>

        <div class="panel">
            {{ include('teams/_form.html.twig', {
                'form': form,
                'submit_label': 'teams.new.submit' | trans,
            }) }}
        </div>
    </main>
{% endblock %}
