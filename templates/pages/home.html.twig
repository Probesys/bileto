{% extends 'base.html.twig' %}

{% set currentPage = 'home' %}

{% block title %}{{ 'home.title' | trans }}{% endblock %}

{% block body %}
    <main class="layout__body flow flow--larger organizations-index">
        <h1>{{ 'home.title' | trans }}</h1>

        <div class="wrapper wrapper--large wrapper--center flow flow--larger">
            <div class="flow">
                <div class="row row--center row--always flow">
                    <h2 class="row__item--extend">{{ 'home.your_tickets' | trans }}</h2>

                    {% if is_granted('orga:create:tickets', 'any') %}
                        <a class="anchor--action" href="{{ path('new ticket') }}">
                            {{ icon('plus') }}
                            {{ 'home.new_ticket' | trans }}
                        </a>
                    {% endif %}
                </div>

                {% if ticketsPagination.count > 0 %}
                    <div class="flow flow--small">
                        {{ include(
                            'tickets/_list.html.twig',
                            { tickets: ticketsPagination.items },
                            with_context = false
                        ) }}

                        {% if ticketsPagination.mustPaginate %}
                            <div>
                                <a href="{{ path('tickets', { 'view': 'owned' }) }}">
                                    {{ 'home.all_your_tickets' | trans }}
                                </a>
                            </div>
                        {% endif %}
                    </div>
                {% else %}
                    <p class="placeholder">
                        {{ icon('ticket') }}
                        {{ 'home.no_tickets' | trans }}
                    </p>
                {% endif %}
            </div>

            {% if organizations %}
                <div class="flow">
                    <h2>{{ 'home.your_organizations' | trans({ count: organizations|length }) }}</h2>

                    <div class="grid">
                        {% for organization in organizations %}
                            <div class="card flow" data-test="organization-item">
                                <a class="card__title" href="{{ path('organization', { uid: organization.uid }) }}">
                                    {{ organization.name }}
                                </a>

                                {% if organization.subOrganizations %}
                                    <div class="card__body">
                                        <ul class="list--padded list--nostyle">
                                            {{ include(
                                                'organizations/_organizations_as_list.html.twig',
                                                { organizations: organization.subOrganizations },
                                                with_context = false
                                            ) }}
                                        </ul>
                                    </div>
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
    </main>
{% endblock %}
