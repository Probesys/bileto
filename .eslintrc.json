{
    "env": {
        "browser": true,
        "es6": true
    },

    "extends": [
        "standard"
    ],

    "globals": {},

    "parserOptions": {
        "requireConfigFile": false,
        "ecmaVersion": 2018,
        "sourceType": "module"
    },

    "rules": {
        "comma-dangle": ["error", {
            "arrays": "always-multiline",
            "objects": "always-multiline",
            "imports": "always-multiline",
            "exports": "always-multiline",
            "functions": "never"
        }],
        "semi": ["error", "always"],
        "indent": ["error", 4]
    }
}
